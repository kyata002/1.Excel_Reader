<resources>
    <!-- Base application theme. -->
    <style name="Theme.BaseStructure" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">#129253</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Popup Style -->
    <style name="MyPopupStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!-- Used for the background -->
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="CustomEditTextView" parent="TextAppearance.AppCompat">
        <item name="colorAccent">#02723B</item>
    </style>
</resources>