<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/border_filter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#99000000">

    <RadioGroup

        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/shape_dialog_sort"
        android:backgroundTint="#fff"
        android:gravity="center">

        <LinearLayout
            android:focusable="false"
            android:clickable="false"
            android:id="@+id/radio_filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            android:weightSum="3"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_weight="1"
                android:background="@drawable/shape_dialog_sort"
                android:backgroundTint="#F4F4F4"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp">

                <RadioButton
                    android:id="@+id/by_name"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:background="@android:color/transparent"
                    android:button="@drawable/checkbox_sort"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="@dimen/_48sdp"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:src="@drawable/ic_alpha" />

                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Sort By Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_weight="1"
                android:background="@drawable/shape_dialog_sort"
                android:backgroundTint="#F4F4F4"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp">

                <RadioButton
                    android:id="@+id/by_size"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:background="@android:color/transparent"
                    android:button="@drawable/checkbox_sort" />

                <ImageView
                    android:layout_width="@dimen/_48sdp"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:src="@drawable/ic_folder" />

                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Sort By Size"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_dialog_sort"
                android:backgroundTint="#F4F4F4"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp">

                <RadioButton
                    android:id="@+id/by_created_time"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:background="@android:color/transparent"
                    android:button="@drawable/checkbox_sort" />

                <ImageView
                    android:layout_width="@dimen/_48sdp"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:src="@drawable/ic_time" />

                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Sort By Created Time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>
        </LinearLayout>


    </RadioGroup>

</LinearLayout>