<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/border_filter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:layout_gravity="center">

    <RadioGroup
        android:id="@+id/radio_filter"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:backgroundTint="#fff"
        android:background="@drawable/shape_dialog_sort"
        android:layout_margin="@dimen/_16sdp"
        android:clickable="false"
        android:longClickable="false"
        >
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="@dimen/_3sdp"

            >
            <LinearLayout
                android:id="@+id/sort_by_name"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_120sdp"
                android:orientation="vertical"
                android:backgroundTint="#F4F4F4"
                android:padding="@dimen/_4sdp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_weight="1"
                android:background="@drawable/shape_dialog_sort"
                android:layout_marginRight="@dimen/_4sdp"
                >
                <RadioButton
                    android:id="@+id/by_name"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="8px"
                    android:layout_marginRight="8px"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:button="@drawable/checkbox_sort"
                    android:layout_marginBottom="@dimen/_8sdp"
                    />
                <ImageView
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:src="@drawable/ic_alpha"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sort By\nName"
                    android:layout_gravity="center"
                    android:maxLines="2"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textColor="#3C3C3C"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sort_by_size"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_120sdp"
                android:orientation="vertical"
                android:backgroundTint="#F4F4F4"
                android:padding="@dimen/_4sdp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_weight="1"
                android:background="@drawable/shape_dialog_sort"
                android:layout_marginRight="@dimen/_4sdp">
                <RadioButton
                    android:id="@+id/by_size"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="8px"
                    android:layout_marginRight="8px"
                    android:layout_gravity="right"
                    android:background="@android:color/transparent"
                    android:button="@drawable/checkbox_sort"
                    android:layout_marginBottom="@dimen/_8sdp"/>
                <ImageView
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:src="@drawable/ic_folder"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sort By\nSize"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:maxLines="2"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="#3C3C3C"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sort_by_time"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:background="@drawable/shape_dialog_sort"
                android:backgroundTint="#F4F4F4"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp">

                <RadioButton
                    android:id="@+id/by_created_time"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="8px"
                    android:layout_marginRight="8px"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:background="@android:color/transparent"
                    android:button="@drawable/checkbox_sort" />

                <ImageView
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:src="@drawable/ic_time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:maxLines="2"
                    android:text="Sort By\nCreated Time"
                    android:textColor="#3C3C3C"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


    </RadioGroup>

</LinearLayout>