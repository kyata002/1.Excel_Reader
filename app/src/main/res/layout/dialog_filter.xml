<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/border_filter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:layout_gravity="center">

    <RadioGroup
        android:id="@+id/radio_filter"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:backgroundTint="#fff"
        android:background="@drawable/shape_dialog_sort"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:clickable="false"
        android:longClickable="false"
        >
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="@dimen/_8sdp"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:backgroundTint="#F4F4F4"
                android:padding="@dimen/_4sdp"
                android:layout_weight="1"
                android:background="@drawable/shape_dialog_sort"
                android:layout_marginRight="@dimen/_4sdp"
                >
                <RadioButton
                    android:id="@+id/by_name"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:button="@drawable/checkbox_sort"
                    android:layout_marginBottom="@dimen/_16sdp"/>
                <ImageView
                    android:layout_width="@dimen/_48sdp"
                    android:layout_height="@dimen/_48sdp"
                    android:src="@drawable/ic_alpha"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_8sdp"/>
                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:text="Sort By Name"
                    android:layout_gravity="center"
                    android:maxLines="2"
                    android:gravity="center"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_semibold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:backgroundTint="#F4F4F4"
                android:padding="@dimen/_4sdp"
                android:layout_weight="1"
                android:background="@drawable/shape_dialog_sort"
                android:layout_marginRight="@dimen/_4sdp">
                <RadioButton
                    android:id="@+id/by_size"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="right"
                    android:background="@android:color/transparent"
                    android:button="@drawable/checkbox_sort"
                    android:layout_marginBottom="@dimen/_16sdp"/>
                <ImageView
                    android:layout_width="@dimen/_48sdp"
                    android:layout_height="@dimen/_48sdp"
                    android:src="@drawable/ic_folder"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_12sdp"/>
                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:text="Sort By Size"
                    android:layout_gravity="center"
                    android:maxLines="2"
                    android:gravity="center"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_semibold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:backgroundTint="#F4F4F4"
                android:padding="@dimen/_4sdp"
                android:layout_weight="1"
                android:background="@drawable/shape_dialog_sort">
                <RadioButton
                    android:id="@+id/by_created_time"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="right"
                    android:background="@android:color/transparent"
                    android:button="@drawable/checkbox_sort"
                    android:layout_marginBottom="@dimen/_16sdp" />
                <ImageView
                    android:layout_width="@dimen/_48sdp"
                    android:layout_height="@dimen/_48sdp"
                    android:src="@drawable/ic_time"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_8sdp"
                    />
                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:text="Sort By Created Time"
                    android:layout_gravity="center"
                    android:maxLines="2"
                    android:gravity="center"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_semibold"/>
            </LinearLayout>
        </LinearLayout>


    </RadioGroup>

</LinearLayout>