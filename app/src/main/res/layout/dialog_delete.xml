<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:backgroundTint="#fff"
        android:background="@drawable/shape_dialog_sort"
        android:clickable="false"
        android:longClickable="false"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_14sdp"
            android:paddingBottom="@dimen/_14sdp"
            android:text="Delete"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#000"
            android:layout_gravity="center"
            android:textSize="@dimen/_16sdp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNameDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Are you sure you want to delete"
            android:textColor="#000"
            android:textFontWeight="600"
            android:textSize="@dimen/_12sdp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="16dp">

            <LinearLayout
                android:id="@+id/bt_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/bg_action"
                android:backgroundTint="#fff"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatTextView
                    android:background="@drawable/bg_dialog_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textColor="#ff0000"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bt_delete"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginVertical="16dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:background="#02723B"
                android:gravity="center"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Delete"
                    android:textColor="#fff"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>
</LinearLayout>