<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/fr_ad"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:background="#00733B"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="@drawable/ic_btn_back" />
                </FrameLayout>

                <TextView
                    android:id="@+id/name_file_read"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="@dimen/_14sdp" />

                <ImageButton
                    android:id="@+id/btn_share"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:background="@drawable/ic_share"
                    android:foreground="?attr/selectableItemBackgroundBorderless" />
                <!--                <ImageButton-->
                <!--                    android:foreground="?attr/selectableItemBackgroundBorderless"-->
                <!--                    android:id="@+id/btn_print"-->
                <!--                    android:background="@drawable/ic_print"-->
                <!--                    android:layout_gravity="center"-->
                <!--                    android:layout_marginRight="@dimen/_16sdp"-->
                <!--                    android:layout_width="@dimen/_24sdp"-->
                <!--                    android:layout_height="@dimen/_24sdp"/>-->
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/app_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fr_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <include layout="@layout/layout_banner_control" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>