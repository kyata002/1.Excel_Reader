<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56sdp"
        android:background="#00733B"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:background="@drawable/ic_btn_back" />
        </FrameLayout>

        <TextView
            android:id="@+id/name_file_read"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text=""
            android:textColor="#fff"
            android:textSize="@dimen/_14sdp" />

        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@drawable/ic_share"
            android:foreground="?attr/selectableItemBackgroundBorderless" />
        <!--                <ImageButton-->
        <!--                    android:foreground="?attr/selectableItemBackgroundBorderless"-->
        <!--                    android:id="@+id/btn_print"-->
        <!--                    android:background="@drawable/ic_print"-->
        <!--                    android:layout_gravity="center"-->
        <!--                    android:layout_marginRight="@dimen/_16sdp"-->
        <!--                    android:layout_width="@dimen/_24sdp"-->
        <!--                    android:layout_height="@dimen/_24sdp"/>-->
    </LinearLayout>


    <FrameLayout
        android:id="@+id/fr_doc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/fr_ad"
        app:layout_constraintTop_toBottomOf="@+id/toolBar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_page"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@drawable/bg_page"
        android:backgroundTint="#00733B"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toTopOf="@id/fr_ad"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <FrameLayout
        android:id="@+id/fr_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <include layout="@layout/layout_banner_control" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>