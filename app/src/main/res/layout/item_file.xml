<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/bg_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/view_file"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp">

                <ImageView
                    android:id="@+id/img_view_file"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_item_file" />
            </FrameLayout>


            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_24sdp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="@dimen/_13sdp"
                    android:id="@+id/name_file"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:fontFamily="@font/lexend_regular"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="#3C3C3C"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:weightSum="100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/size_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:fontFamily="@font/lexend_regular"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textColor="#838388"
                        android:textSize="@dimen/_10sdp" />
                    <TextView
                        android:text=" | "
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_13sdp"
                        />
                    <TextView
                        android:id="@+id/date_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexend_regular"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textColor="#838388"
                        android:textSize="@dimen/_10sdp"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <CheckBox
            android:id="@+id/favorite_checked"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_12sdp"
            android:button="@drawable/ic_favorite_true"
            android:checked="false"
            tools:ignore="TouchTargetSizeCheck" />

        <FrameLayout
            android:id="@+id/more_options"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_23sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_more" />
        </FrameLayout>

    </LinearLayout>


</LinearLayout>
