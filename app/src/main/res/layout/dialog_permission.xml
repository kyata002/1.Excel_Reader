<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/border_filter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/_16sdp">
    <LinearLayout
        android:id="@+id/dialog_permission"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:layout_margin="@dimen/_16sdp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog"
        android:backgroundTint="#fff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allow Excel Reader to access all\nfiles on your device"
            android:gravity="center"
            android:textColor="#3C3C3C"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_32sdp"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/poppins_regular"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/btn_deny"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_32sdp"
                android:gravity="center"
                android:text="Deny"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:textAllCaps="false"
                android:textSize="@dimen/_12sdp"
                android:textColor="#605D5D"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/bg_action"
                android:backgroundTint="#EBEBEB"
                android:layout_marginEnd="@dimen/_8sdp"/>
            <TextView
                android:id="@+id/btn_allow"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_32sdp"
                android:gravity="center"
                android:textAllCaps="false"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:text="Allow"
                android:textSize="@dimen/_12sdp"
                android:textColor="#fff"
                android:background="@drawable/bg_action"
                android:backgroundTint="#02723B"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>