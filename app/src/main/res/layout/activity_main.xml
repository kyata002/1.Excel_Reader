<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:background="#00733B">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_weight="10"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="@dimen/_10sdp"
                    android:text="Excel Reader"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20sdp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_setting"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_gravity="left|center"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_setting"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:padding="@dimen/_3sdp">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_16sdp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/search_bt"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:src="@drawable/ic_btn_share2" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/search_bt_back"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />
                </FrameLayout>


                <com.pdfreaderdreamw.pdfreader.view.widget.CustomEditText
                    android:id="@+id/search_bar"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/lexend_regular"
                    android:gravity="center|left"
                    android:hint="Share files"
                    android:paddingTop="@dimen/_2sdp"
                    android:textColor="#B9B9B9"
                    android:textColorHint="#B9B9B9"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/_13sdp"
                    android:theme="@style/CustomEditTextView" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/clear_bt"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp" />

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fr_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp">
        <include layout="@layout/item_native" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/button_file"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_8sdp"
        android:weightSum="101">

        <Button
            android:id="@+id/btn_allfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="40"
            android:background="@drawable/ic_bg_btn_yes"
            android:fontFamily="@font/lexend_regular"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:paddingTop="@dimen/_2sdp"
            android:text="All Documents"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="@dimen/_11sdp" />
        <TextView
            android:id="@+id/btn_recent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_weight="25"
            android:background="@drawable/bg_btn"
            android:fontFamily="@font/lexend_regular"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:paddingTop="@dimen/_2sdp"
            android:text="Recent"
            android:textAllCaps="false"
            android:textColor="#838388"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/btn_favourite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_weight="30"
            android:background="@drawable/bg_btn"
            android:fontFamily="@font/lexend_regular"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:paddingTop="@dimen/_2sdp"
            android:text="Favourite"
            android:textAllCaps="false"
            android:textColor="#838388"
            android:textSize="@dimen/_11sdp" />
        <ImageView
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/sort_btn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_weight="1"
            android:background="@drawable/ic_sort2"
            android:foreground="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvExcel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/no_result_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/no_file"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_171sdp"
            android:layout_gravity="center" />

    </FrameLayout>
</LinearLayout>